        </Button>
        <Button x:Name="btnEdit" HorizontalAlignment="Left" Margin="45,49,0,0" VerticalAlignment="Top" Width="85" RenderTransformOrigin="0.479,3.511" Click="btnEdit_Click" Background="#FF00B0FF" Height="99" Grid.Column="1">
            <Image Source="/IISM;component/Edit.png" Stretch="Fill" Height="89" Width="85"/>
        </Button>
        <Button x:Name="btnRtn" HorizontalAlignment="Left" Margin="92,178,0,0" VerticalAlignment="Top" Width="106" Click="btnRtn_Click" Background="#FF00B0FF" Height="40" Grid.ColumnSpan="2">
            <Image Source="/IISM;component/BackIcon32.png" Stretch="Fill" Height="32" Width="32"/>
        </Button>
    </Grid>
</Window>
